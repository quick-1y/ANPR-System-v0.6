{
  "models": {
    "yolo_model_path": "models/yolo/best.pt",
    "ocr_model_path": "models/ocr_crnn/crnn_ocr_model_int8_fx.pth",
    "device": "cpu"
  },
  "ocr": {
    "img_height": 32,
    "img_width": 128,
    "alphabet": "0123456789ABCEHKMOPTXY",
    "confidence_threshold": 0.6,
    "segmentation": {
      "enabled": false,
      "min_symbol_area_ratio": 0.0025,
      "max_symbol_area_ratio": 0.18,
      "min_symbol_aspect_ratio": 0.18,
      "max_symbol_aspect_ratio": 1.35,
      "padding_px": 2,
      "max_components": 18,
      "row_merge_threshold": 0.55
    }
  },
  "detector": {
    "confidence_threshold": 0.5
  },
  "inference": {
    "workers": 2,
    "shared_memory": true
  },
  "grid": "2x2",
  "channels": [],
  "reconnect": {
    "signal_loss": {
      "enabled": true,
      "frame_timeout_seconds": 5,
      "retry_interval_seconds": 5
    },
    "periodic": {
      "enabled": false,
      "interval_minutes": 60
    }
  },
  "storage": {
    "db_dir": "data/db",
    "database_file": "anpr.db",
    "screenshots_dir": "data/screenshots"
  },
  "tracking": {
    "best_shots": 10,
    "cooldown_seconds": 10,
    "ocr_min_confidence": 0.9,
    "direction": {
      "history_size": 12,
      "min_track_length": 3,
      "smoothing_window": 5,
      "confidence_threshold": 0.55,
      "jitter_pixels": 1.0,
      "min_area_change_ratio": 0.02
    }
  },
  "plates": {
    "config_dir": "config/countries",
    "enabled_countries": ["RU", "UA", "BY", "KZ"]
  },
  "logging": {
    "level": "INFO",
    "file": "data/app.log",
    "max_bytes": 1048576,
    "backup_count": 5
  }
}
